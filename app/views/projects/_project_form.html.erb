<div class="container">
  <% if @project.errors.any? %>
      <ul>
          <% @project.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
      </ul>
  <% end %>

  <%= form_for @project do |f| %>
      <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, :class => "form-control" %>
      </div>

      <div class="form-group">
          <%= f.label :description %>
          <%= f.text_field :description, :class => "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :coworkers %>
        <%= f.collection_check_boxes(:coworker_ids, Coworker.all, :id, :name, {}, {:class => "form-control form-control-sm"}) do |c| %>
          <div style="display: flex; align-items: base-line">
            <%= c.check_box, :style => "width: 20px;" %>
            <%= c.label %>
          </div>
        <% end %>
      </div>

      <div>
          <%= f.submit %>
      </div>
  <% end %>
</div>